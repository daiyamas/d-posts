<h1>新規登録画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->    

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パースワード（再度ご入力ください）" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>